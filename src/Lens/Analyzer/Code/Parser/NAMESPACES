<?php

echo "hi"; <-- implied global namespace

======
<?php

declare(encoding = 'UTF-8');


namespace A;  <-- first declaration in the file (other than a declare statement)

echo "hi";


namespace A\B;

echo "hi";

======
<?php

declare(encoding = 'UTF-8');


namespace { <-- first declaration in the file (other than a declare statement)
	echo "hi";
}


namespace Example {
	echo "hi";
}


namespace A\B {
	echo "ho";
}

<-- no code allowed

======
