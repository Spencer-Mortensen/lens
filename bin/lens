#!/usr/bin/env php
<?php

namespace Lens;

spl_autoload_register(
	function ($class)
	{
		if (strncmp($class, 'Lens\\', 5) !== 0) {
			return;
		}

		$relativeClassName = substr($class, 5);
		$relativeFilePath = strtr($relativeClassName, '\\', '/') . '.php';
		$absoluteFilePath = dirname(__DIR__) . "/src/{$relativeFilePath}";

		if (is_file($absoluteFilePath)) {
			include $absoluteFilePath;
		}
	}
);

new Command();
