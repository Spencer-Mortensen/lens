{
    "name": "lens/lens",
    "type": "library",
    "description": "Lens is a unit-testing framework for PHP with readable tests that catch everything.",
    "keywords": [
        "unit",
        "test",
        "testing",
        "PHP",
        "lens",
        "phpunit"
    ],
    "homepage": "http://lens.guide",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Spencer Mortensen",
            "email": "spencer@lens.guide",
            "homepage": "http://spencermortensen.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "spencer-mortensen/regular-expressions": "~1.2",
        "spencer-mortensen/parallel-processor": "~2.0",
        "spencer-mortensen/parser": "~3.0",
        "spencer-mortensen/paths": "~0.0"
    },
    "bin": [
        "bin/lens"
    ],
    "autoload": {
        "psr-4": {
            "Lens\\": "src"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true
    }
}
